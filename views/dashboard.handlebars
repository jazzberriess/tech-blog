<section>
    <h3 class="dashboard-header">Your previous blog posts</h3>
    {{#each userPosts as |post|}}
    <div class="blog-post-home">
        <a href="/dashboard/blog/{{post.id}}">
            <h3>{{post.title}}</h3>
        </a>
        <p>{{post.description}}</p>
        <p class="date-stamp">Posted on {{format_date post.createdAt}}</p>
    </div>
    {{/each}}
    {{!-- {{#if userPosts undefined}}
    <p>Oops! No posts here!</p>
    {{/if}} --}}
    <section>

        <section>
            <form class="new-blog-post">
                <h3>Your future blog post</h3>
                <div class="row">
                    <div class="twelve columns">
                        <label for="blog-title">Awesome Title Here</label>
                        <input class="u-full-width" placeholder="A title goes here" id="blog-title-input">
                    </div>
                    <div class="twelve columns">
                        <label for="blog-content">Your Amazing Blog Post Here</label>
                        <textarea class="u-full-width" placeholder="This is the start of something amazing â€¦"
                            id="blog-content-input"></textarea>
                    </div>
                    <input class="button-primary" type="submit" value="Submit">
                </div>
            </form>
        </section>

        <script src="./js/newblog.js"></script>